syntax on
set nocompatible
filetype indent plugin on

set tabstop=4
set shiftwidth=4
set expandtab

set number
set relativenumber
set autoindent

" Disable Arrow keys in Escape mode
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

" Disable Arrow keys in Insert mode
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>
